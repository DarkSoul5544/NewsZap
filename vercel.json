{
    "version": 2,
    "builds": [
      {
        "src": "backend/server.js",
        "use": "@vercel/node",
        "config": {
          "runtime": "nodejs14.x"
        }
      },
      {
        "src": "frontend/index.html",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "public"
        }
      }
    ],
    "routes": [
      {
        "src": "/api/*",
        "dest": "backend/server.js"
      },
      {
        "src": "/*",
        "dest": "index.html"
      }
    ]
  }